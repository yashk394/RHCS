<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signupColor"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".select_center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/center"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/myImage"
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_below="@+id/vi"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:cropToPadding="true"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/satara" />

                    <TextView
                        android:id="@+id/ch1"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:text="@string/satara2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/myImage1"
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="20dp"
                        android:cropToPadding="true"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chiplun" />

                    <TextView
                        android:id="@+id/ch2"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="@string/chiplun2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/myImage2"
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:layout_marginLeft="20dp"
                        android:cropToPadding="true"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/karad" />

                    <TextView
                        android:id="@+id/ch3"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="@string/karad2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/myImage3"
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="30dp"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/phaltan" />

                    <TextView
                        android:id="@+id/ch4"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="@string/phaltan2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/myImage4"
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:cropToPadding="true"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/indapur" />

                    <TextView
                        android:id="@+id/ch5"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="@string/indapur2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/myImage5"
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="20dp"
                        android:cropToPadding="true"
                        android:padding="1dp"
                        android:background="@drawable/border"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bel" />

                    <TextView
                        android:id="@+id/ch6"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="@string/belgaum2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/myImage6"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:cropToPadding="true"
                android:padding="1dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/bara" />

            <TextView
                android:id="@+id/ch7"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="@string/baramati2"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


